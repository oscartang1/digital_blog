<html>
<head>
  <title>Reset Password</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body style="background-image: url(http://www.fanpiece.com/images/texture/bg-light-gray.gif?20121102); background-color: #f2f2f2">
	<div id="bar">
		<div id="bar-container">
			<div id="bar-logo-2"><%= image_tag("banner_logo.png", alt: "Logo Image", height: 25) %></div>
		</div>
	</div>
		
	<div id="login-box">
		<div id="login-content">
			<%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
			  <% if @user.errors.any? %>
			   		<div id="error-msg">
						<ol>
				        <% for message in @user.errors.each_with_index %>
				          <li><%= message[1] %></li>
				        <% end %>
						</ol>
					</div>
				<% end %>
			    <p><%= f.password_field :password, class: "inputs", placeholder: "New password" %></p>
			    <p><%= f.password_field :password_confirmation, class: "inputs", placeholder: "Confirm your password" %></p>
			  	<p><%= f.submit "Update Password", class: "button" %></p>
			<% end %>
			
			
		</div>
	</div>
</body>

</html>
