											<%= link_to image_tag("add_comment.png", height: 18), reviews_new_path(post.id), method: :post %> 
									</div>
									<div id="time-span"><%= time_ago_in_words post.created_at %> ago</div>
								</div>
								</br>
								</br>
							</div>
						<% end %>
				</div>
